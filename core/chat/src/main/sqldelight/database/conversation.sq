getLastLocalChatId:
SELECT MAX(id) FROM Conversation;

getChatList:
SELECT * FROM Conversation ORDER BY id DESC;

updateChatListItemTitle:
UPDATE Conversation SET title = :title WHERE id = :chatId;

updateChatListItem:
